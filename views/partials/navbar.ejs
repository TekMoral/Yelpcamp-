<% 
  const _currentPath = (typeof currentPath !== 'undefined' && currentPath) ? currentPath : ''; 
  const _displayName = (currentUser && (currentUser.email || currentUser.username)) || 'User';
  const _localPart = _displayName.includes('@') ? _displayName.split('@')[0] : _displayName;
  const _initial = (_localPart && _localPart.charAt(0)) ? _localPart.charAt(0).toUpperCase() : 'U';
%>
<nav
  class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark"
  style="margin-bottom: 0 !important"
>
  <div class="container-fluid">
    <a class="navbar-brand" href="/">CampBliss</a>
    <button
      class="navbar-toggler collapsed"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link <%= _currentPath === '/' ? 'active' : '' %>" href="/">Home</a>
        <a class="nav-link <%= _currentPath.startsWith('/campgrounds') && !_currentPath.endsWith('/new') ? 'active' : '' %>" href="/campgrounds">Campgrounds</a>
        <a class="nav-link <%= _currentPath === '/campgrounds/new' ? 'active' : '' %>" href="/campgrounds/new">New Campground</a>
      </div>

      <div class="navbar-nav ms-auto">
        <% if(currentUser) { %>
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <span class="avatar bg-success text-white rounded-circle d-inline-flex justify-content-center align-items-center me-2" style="width:32px;height:32px;font-size:0.9rem;">
                <%= _initial %>
              </span>
              <span><%= _displayName %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
              <li><a class="dropdown-item" href="/campgrounds/new">New Campground</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a></li>
            </ul>
          </div>
        <% } else { %>
          <a class="nav-link <%= _currentPath === '/login' ? 'active' : '' %>" href="/login">Login</a>
          <a class="nav-link <%= _currentPath === '/register' ? 'active' : '' %>" href="/register">Register</a>
        <% } %>
      </div>
          </div>
  </div>
</nav>

<!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="logoutModalLabel">Confirm Logout!!</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to log out?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmLogout">Yes, Log Out</button>
      </div>
    </div>
  </div>
</div>



<script>
document.getElementById('confirmLogout').addEventListener('click', function() {
    window.location.href = '/logout';
});
</script>
