<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/campgrounds-index.css">

<div class="campgrounds-page">
    <div class="container">
        
        <!-- Map Container -->
        <div class="map-container">
            <div id="cluster-map"></div>
        </div>

        <!-- Enhanced Search Section -->
        <div class="search-section">
            <form class="search-form" action="/campgrounds" method="GET">
                <div class="search-input-group">
                    <i class="fas fa-search search-icon"></i>
                    <input 
                        type="text" 
                        name="search" 
                        class="search-input" 
                        placeholder="Search campgrounds..."
                        value="<%= typeof search !== 'undefined' ? search : '' %>"
                        autocomplete="off"
                        required
                    >
                </div>

                <button type="submit" class="search-button">
                    <i class="fas fa-search me-2"></i>
                    <span>Search</span>
                </button>

                <% if (typeof search !== 'undefined' && search) { %>
                    <a href="/campgrounds" class="clear-button">
                        <i class="fas fa-times me-2"></i>
                        <span>Clear</span>
                    </a>
                <% } %>
            </form>
        </div>

        <!-- Results Header -->
        <div class="results-header">
            <div>
                <h1 class="page-title">
                    <% if (typeof search !== 'undefined' && search) { %>
                        Search Results
                    <% } else { %>
                        All Campgrounds
                    <% } %>
                </h1>
                
                <% if (typeof search !== 'undefined' && search) { %>
                    <div class="results-info">
                        <% if (campgrounds.length === 0) { %>
                            No campgrounds found matching '<strong><%= search %></strong>'
                        <% } else { %>
                            Found <span class="results-count"><%= campgrounds.length %></span> 
                            campground<%= campgrounds.length === 1 ? '' : 's' %> matching '<strong><%= search %></strong>'
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="results-info">
                        Showing <span class="results-count"><%= campgrounds.length %></span> amazing campgrounds
                    </div>
                <% } %>
            </div>

            <a href="/campgrounds/new" class="add-campground-btn">
                <i class="fas fa-plus"></i>
                <span>Add Campground</span>
            </a>
        </div>

        <!-- Campgrounds Grid -->
        <% if (campgrounds.length === 0) { %>
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h2 class="empty-state-title">No campgrounds found</h2>
                <p class="empty-state-text">
                    <% if (typeof search !== 'undefined' && search) { %>
                        Try adjusting your search terms or browse all campgrounds.
                    <% } else { %>
                        Be the first to add a campground to our community!
                    <% } %>
                </p>
                <% if (typeof search !== 'undefined' && search) { %>
                    <a href="/campgrounds" class="add-campground-btn">
                        <i class="fas fa-list me-2"></i>View All Campgrounds
                    </a>
                <% } else { %>
                    <a href="/campgrounds/new" class="add-campground-btn">
                        <i class="fas fa-plus me-2"></i>Add First Campground
                    </a>
                <% } %>
            </div>
        <% } else { %>
            <div class="campgrounds-grid">
                <% for (let campground of campgrounds) { %>
                    <div class="campground-card">
                        <div class="card-image-container">
                            <% if (campground.images && campground.images.length) { %>
                                <img class="card-image" src="<%= campground.images[0].url %>" alt="<%= campground.title %>">
                            <% } else { %>
                                <img class="card-image" src="https://res.cloudinary.com/dfger19r7/image/upload/v1735279588/YelpCamp/ylhtrj9gkfvko4djcs3k.png" alt="Default campground">
                            <% } %>
                            
                            <div class="card-badge">
                                $<%= campground.price %>/night
                            </div>
                        </div>

                        <div class="card-content">
                            <h3 class="card-title"><%= campground.title %></h3>
                            
                            <div class="card-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span><%= campground.location %></span>
                            </div>

                            <p class="card-description">
                                <%= campground.description %>
                            </p>

                            <div class="card-footer">
                                <div class="card-price">
                                    $<%= campground.price %>
                                    <span class="card-price-label">per night</span>
                                </div>
                                
                                <a href="/campgrounds/<%= campground._id %>" class="card-button">
                                    <i class="fas fa-eye me-1"></i>
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
</div>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = '{ features: <%- JSON.stringify(campgrounds) %> }';
</script>

<script>
  document.addEventListener('DOMContentLoaded', function(){
    var form = document.querySelector('.search-form');
    var input = form ? form.querySelector('.search-input') : null;
    var button = form ? form.querySelector('.search-button') : null;
    if (!form || !input || !button) return;

    function syncState(){
      var hasText = (input.value || '').trim().length > 0;
      button.disabled = !hasText;
      button.classList.toggle('disabled', !hasText);
    }

    // Initialize and bind
    syncState();
    input.addEventListener('input', syncState);

    form.addEventListener('submit', function(e){
      if ((input.value || '').trim().length === 0) {
        e.preventDefault();
        syncState();
      }
    });
  });
</script>
<script src="/javascripts/clusterMap.js"></script>
